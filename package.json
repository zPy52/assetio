{
  "name": "assetio",
  "version": "1.0.2",
  "description": "TypeScript SDK for programmatic media editing and composition",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "preview": "npm run build && node examples/preview/server.mjs"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "video",
    "editor",
    "timeline",
    "sdk",
    "typescript",
    "media"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.95",
    "ffmpeg-static": "^5.3.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "jsdom": "^26.0.0",
    "tsdown": "^0.20.3",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  }
}
